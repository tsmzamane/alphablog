<div class="form-control text-white" id="form-control">
<%= form_with(model:@article, class: "shadow p-3 mb-3 rounded", local: true) do |f| %>
	<div class="form-group mt-3 d-flex justify-content-between">
		<%= f.label :title, class: "col-sm-1" %>
		<div class="col-10">
			<%= f.text_field :title, class:"form-control" %>
		</div>
	</div>

	<div class="form-group d-flex justify-content-between">
		<%= f.label :description, class: "col-sm-1" %>
		<div class="col-10">
			<%= f.text_area :description, rows: 10, class:"form-control" %>
		</div>
	</div>

	<div class=" d-flex justify-content-center">
		<%= f.submit class: "form-control col-sm-2 btn btn-success", id: "button" %>
	</div>	

<% end %>   
</div>    

<%= link_to '[ Cancel and Return to articles listing ]', articles_path, id:"return-article" %> 
</div>
