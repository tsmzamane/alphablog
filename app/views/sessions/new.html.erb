<h1 class="text-center mt-4">Log in</h1>
	<div class="container">
	<div class="form-control text-white" id="form-control">

	<%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 rounded", local: true) do |f| %>
	<div class="form-group d-flex justify-content-between">
		<%= f.label :email, class: "col-sm-1" %>
		<div class="col-10">
			<%= f.email_field :email, class:"form-control" %>
		</div>
	</div>

	<div class="form-group d-flex justify-content-between">
		<%= f.label :password, class: "col-sm-1" %>
		<div class="col-10">
			<%= f.password_field :password, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.submit "Log in", class: "btn btn-success", id: "button" %>
	</div>
	<% end %>   
	</div>    

	<%= link_to '[ Cancel and Return to articles listing ]', articles_path, id:"return-article" %> 
	</div>
</div>